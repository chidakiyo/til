{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "baseUrl": "./definitions/",
        "typeRoots": [
            "./definitions/"
        ],
        "types": [
            "react"
        ],
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ]
}