{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "lib": [
            "es2016",
            "dom"
        ],
        "jsx": "react",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "baseUrl": "./definitions/",
        "typeRoots": [
            "./definitions/"
        ],
        "types": [
            "skatejs",
            "whatwg-shadowdom",
            "whatwg-customelements"
        ],
        "forceConsistentCasingInFileNames": true,
        "jsxFactory": "skate.h"
    },
    "include": [
        "./src/**/*.tsx",
        "./test/**/*.tsx"
    ]
}