{
    "compilerOptions": {
        "noEmit": true,
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es2016",
            "dom"
        ],
        "jsx": "react",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "baseUrl": "./definitions/",
        "typeRoots": [
            "./definitions/"
        ],
        "types": [
            "skatejs"
        ],
        "forceConsistentCasingInFileNames": true,
        "reactNamespace": "skatex"
    },
    "include": [
        "./src/**/*.tsx"
    ]
}